<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DatEx.Skelya.GUI.CustomCtrls">

    <Style TargetType="{x:Type local:OperationProgressCtrl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:OperationProgressCtrl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="Orange"
                            BorderThickness="2">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" x:Name="Part_OperationNameLbl" Content="Operation name" Visibility="Visible" VerticalAlignment="Center"/>
                            <ProgressBar Grid.Column="1" x:Name="Part_OperationProgressProgBar" Minimum="0" Maximum="100" Value="33" Height="16" Visibility="Visible" VerticalAlignment="Center"/>
                            <Label Grid.Column="2" x:Name="Part_OperationProgresPercentLbl" Content="100 %" Visibility="Visible" VerticalAlignment="Center"/>
                        </Grid>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>