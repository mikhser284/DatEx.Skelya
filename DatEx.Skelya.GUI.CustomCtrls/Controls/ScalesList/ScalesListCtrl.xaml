<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DatEx.Skelya.GUI.CustomCtrls">

    <Style TargetType="{x:Type local:ScalesListCtrl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ScalesListCtrl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">

                        <ListBox>
                            <ListBoxItem>
                                <local:ScalesCtrl/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <local:ScalesCtrl/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <local:ScalesCtrl/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <local:ScalesCtrl/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <local:ScalesCtrl/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <local:ScalesCtrl/>
                            </ListBoxItem>
                        </ListBox>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>