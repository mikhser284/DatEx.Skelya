<UserControl x:Class="DatEx.Skelya.GUI.UserControls.OperationProgressCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatEx.Skelya.GUI.UserControls"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" x:Name="Part_OperationNameLbl" Content="Operation name" Visibility="Visible" VerticalAlignment="Center"/>
        <ProgressBar Grid.Column="1" x:Name="Part_OperationProgressProgBar" Minimum="0" Maximum="100" Value="33" Height="16" Visibility="Visible" VerticalAlignment="Center"/>
        <Label Grid.Column="2" x:Name="Part_OperationProgresPercentLbl" Content="100 %" Visibility="Visible" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
